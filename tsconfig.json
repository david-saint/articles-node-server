{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loopback/build/config/tsconfig.common.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
